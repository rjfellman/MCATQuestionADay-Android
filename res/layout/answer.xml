<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mcatbackground"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/answer_image"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="0.09"
            android:src="@drawable/accept" />

        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"
            android:text="Sorry, Try Again!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/results_webview"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.6" />

        <View
            android:id="@+id/View1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#C00000"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Other users answered..."
            android:textColor="#C00000"
            android:layout_gravity="center"/>

        <WebView
            android:id="@+id/bargraph_webview"
            android:layout_width="300dp"
            android:layout_height="165dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.29" 
            android:layout_gravity="center"/>
        
        <View
            android:id="@+id/View2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

    </LinearLayout>

</LinearLayout>